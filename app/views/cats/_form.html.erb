<% if cat.persisted? %>
  <% action_url = cat_url(cat.id) %>
<% else %>
  <% action_url = cats_url(cat.id) %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if cat.persisted? %>
  <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="cat_name">Name: </label>
  <input type="text" name="cat[name]" id="cat_name" value="<%=  cat.name %>">

  <label for="cat_birthdate">Birth Date: </label>
  <input type="date" name="cat[birth_date]" id="cat_birth_date" value="<%=  cat.birth_date %>">

  <label for="cat_sex">Sex: </label>
  <input type="radio" name="cat[sex]" id="cat_sex" value="F" <%=  cat.sex == "F" ? "checked" : ""%> >F
  <input type="radio" name="cat[sex]" id="cat_sex" value="M" <%=  cat.sex == "M" ? "checked" : ""%>>M


  <label for="cat_color">Color: </label>
  <select type="option" name="cat[color]" id="cat_color" value="-- select a color --">
    <option disabled <%=  cat.color ? "" : "selected" %>> -- select a color --</option>
    <option value="black" <%= cat.color == "black" ? "selected" : "" %>>black</option>
    <option value="white" <%= cat.color == "white" ? "selected" : "" %>>white</option>
    <option value="orange" <%= cat.color == "orange" ? "selected" : "" %>>orange</option>
    <option value="grey" <%= cat.color == "grey" ? "selected" : "" %>>grey</option>
    <option value="calico" <%= cat.color == "calico" ? "selected" : "" %>>calico</option>
    <option value="chrome" <%= cat.color == "chrome" ? "selected" : "" %>>chrome</option>
  </select>
  <label for="cat_description">Description: </label>
  <textarea name="cat[description]" id="cat_description" rows="8" cols="80"><%=  cat.description %></textarea>
  <input type="submit" value="submit">
</form>
